{
	"manifest_version": 3,
	"name": "AddonUEC",
	"author": "medit",
	"version": "1.3.0",
	"description": "学務情報システムなどの不便を解消する電通大生専用拡張機能",
	"homepage_url": "https://github.com/meditq/addonuec",

	"icons": {
		"128": "icon.png"
	},

	"content_scripts": [
		{
			"matches": ["*://webclass.cdel.uec.ac.jp/", "*://webclass.cdel.uec.ac.jp/index.html"],
			"js": ["webclass.js", "webclass_script.js"]
		},
		{
			"matches": ["*://campusweb.office.uec.ac.jp/campusweb/campussquare.do?*"],
			"all_frames": true,
			"js": ["campusweb.js"]
		},
		{
			"matches": ["https://shibboleth.cc.uec.ac.jp/mfa/MFAuth.php?*"],
			"js": ["otp.js"]
		}
	],

	"background": {
		"service_worker": "init.js"
	},

	"options_ui": {
		"page": "options.html",
		"browser_style": true
	},

	"permissions": ["storage"],

	"web_accessible_resources": [
        {
            "resources": [
                "webclass_script.js"
            ],
            "matches": [
                "*://webclass.cdel.uec.ac.jp/*"
            ]
        }
    ]
}
